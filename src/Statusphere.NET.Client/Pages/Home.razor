@page "/counter"
@rendermode InteractiveWebAssembly

<PageTitle>Home</PageTitle>

<h1>Counter</h1>

<p>Current count: @Count</p>

<button type="button" @onclick="IncrementCount">Click me</button>

@code {
    private int Count { get; set; } = 0;

    private void IncrementCount()
    {
        Count++;
    }
}